@model List<MyAspNetCoreApp.Web.ViewModels.ProductListComponentViewModel>

<a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index">Go to the products</a>
<table class="table table-dark table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
        </tr>        
    }
    </tbody>
    
</table>