
@{
    ViewData["Title"] = "Index";
}
@model List<Product>

<h1>Ürünler</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>İşlem</th>
        </tr>     
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-controller="Product" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p> ornek@@hotmail.com </p>

@Datetime.Now
<a asp-controller="Product" asp-action="Add" class="btn btn-success">Ürün Ekle</a>

